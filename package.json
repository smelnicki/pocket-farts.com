{
  "name": "pocket-farts",
  "version": "0.0.1",
  "author": "Stephen Melnicki <smelnicki3@gmail.com>",
  "scripts": {
    "lint": "eslint src/",
    "test": "echo 'No tests specified' && exit 1",
    "clean": "rimraf public/styles* public/js/*",
    "copy-vendor": "mkdir -p public/styles && cp node_modules/milligram/dist/milligram.min.css public/styles/ && cp node_modules/normalize.css/normalize.css public/styles/",
    "copy-styles": "cp src/styles/app.css public/styles",
    "copy": "npm run copy-vendor && npm run copy-styles",
    "compile": "mkdir -p public/js && rollup --config rollup.config.js",
    "build": "npm run clean && npm run copy && npm run compile",
    "watch": "watch 'npm run build' src/",
    "serve": "http-server ./public -a localhost -p 3000",
    "start": "npm run watch & npm run serve"
  },
  "devDependencies": {
    "babel-preset-es2015-rollup": "^1.1.1",
    "browser-sync": "^2.12.5",
    "eslint": "^2.9.0",
    "eslint-config-standard": "^5.3.0",
    "eslint-plugin-promise": "^1.1.0",
    "eslint-plugin-standard": "^1.3.2",
    "http-server": "^0.9.0",
    "rimraf": "^2.5.2",
    "rollup": "^0.26.2",
    "rollup-plugin-babel": "^2.4.0",
    "rollup-plugin-json": "^2.0.0",
    "watch": "^0.18.0"
  },
  "dependencies": {
    "milligram": "^1.1.0"
  }
}
